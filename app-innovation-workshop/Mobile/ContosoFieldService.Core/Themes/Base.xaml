<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:themes="using:ContosoFieldService.Themes"
    x:Class="ContosoFieldService.Themes.Base">

    <ResourceDictionary.MergedDictionaries>                
        <themes:Styles />        
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Colors -->
    <Color x:Key="AccentColor">#00D8CB</Color>
    <Color x:Key="AccentColorDark">#00A59B</Color>
    <Color x:Key="AccentColorRed">#D83E01</Color>
    <Color x:Key="AccentColorBlue">#0193D8</Color>
    <Color x:Key="AccentColorOrange">#FFAB89</Color>
    <Color x:Key="AccentColorDarkOrange">#F5A623</Color>

    <Color x:Key="TextColorButton">#FFFFFF</Color>

    <Color x:Key="BackgroundColorItem">#FFFFFF</Color> 
    <Color x:Key="TextColorItem">#000000</Color>
    <Color x:Key="TextColorItemSecondary">#555555</Color>
    <Color x:Key="ItemSeparatorColor">#EEEEEE</Color>

    <!-- Colors to override by themes -->
    <Color x:Key="BackgroundColor">#FF00FF</Color>
    <Color x:Key="BackgroundColorDark">#FF00FF</Color> 
    <Color x:Key="SeparatorColor">#FF00FF</Color>
    <Color x:Key="TextColor">#FF00FF</Color>
    <Color x:Key="TextColorSubtle">#FF00FF</Color>
    <Color x:Key="TextColorPlaceholder">#FF00FF</Color>
    <OnPlatform x:Key="EntryBackgroundColor" x:TypeArguments="Color">
        <On Platform="iOS" Value="#FF00FF" />
        <On Platform="Android" Value="Transpartent" />
    </OnPlatform>
    <OnPlatform x:Key="SearchBarBackgroundColor" x:TypeArguments="Color">
        <On Platform="iOS" Value="#FF00FF" />
        <On Platform="Android" Value="Transpartent" />
    </OnPlatform>

    <!-- Thicknesses -->
    <OnPlatform
        x:Key="DefaultMargin"
        x:TypeArguments="x:Double"
        Android="10"
        WinPhone="10"
        iOS="10" />

    <Thickness
        x:Key="DefaultThickness"
        Bottom="{StaticResource DefaultMargin}"
        Left="{StaticResource DefaultMargin}"
        Right="{StaticResource DefaultMargin}"
        Top="{StaticResource DefaultMargin}" />

    <!-- Font Families -->
    <OnPlatform x:Key="FontFamilyRegular" x:TypeArguments="x:String">
        <On Platform="iOS">AvenirNext-Regular</On>
        <On Platform="Android">AvenirNext-Regular</On>
    </OnPlatform>
    
    <OnPlatform x:Key="FontFamilyMedium" x:TypeArguments="x:String">
        <On Platform="iOS">AvenirNext-Medium</On>
        <On Platform="Android">AvenirNext-Medium</On>
    </OnPlatform>

    <!-- Font Sizes -->
    <OnPlatform x:Key="FontSizeTitle" x:TypeArguments="x:Double">
        <On Platform="iOS">32</On>
        <On Platform="Android">32</On>
    </OnPlatform>                        

    <OnPlatform x:Key="FontSizeLarge" x:TypeArguments="x:Double">
        <On Platform="iOS">19</On>
        <On Platform="Android">19</On>
    </OnPlatform>  
    
    <OnPlatform x:Key="FontSizeRegular" x:TypeArguments="x:Double">
        <On Platform="iOS">16</On>
        <On Platform="Android">16</On>
    </OnPlatform>  
    
    <OnPlatform x:Key="FontSizeSmall" x:TypeArguments="x:Double">
        <On Platform="iOS">12</On>
        <On Platform="Android">12</On>
    </OnPlatform> 
</ResourceDictionary>